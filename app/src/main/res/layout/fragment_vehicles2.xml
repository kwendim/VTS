<android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:elevation="100dp"
    card_view:cardBackgroundColor="@color/card_view"
    card_view:cardCornerRadius="2dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="7">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3">

            <com.project.groupone.vehicletrackingsystem.RoundedImageView
                android:id="@+id/vehicle_pic"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@mipmap/logo"
                android:scaleType="fitCenter"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center|center_horizontal"
                android:adjustViewBounds="true"


                />
        </LinearLayout>


        <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
            android:layout_weight="4"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/vid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textSize="30sp"
                android:textColor="@color/vid_text_view"
                android:text = "63560"
                />

            <TextView
                android:id="@+id/vehicle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:textSize="15sp"
                android:fontFamily="sans-serif"

                android:text="yesiquarMekina"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/brandname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:text="Toyota"
                    />
                <TextView
                    android:id="@+id/modelnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"

                    android:text="Hiace"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/enginecc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:textSize="15sp"
                android:fontFamily="sans-serif"

                android:text="2000"
                />

        </LinearLayout>




    </LinearLayout>

</android.support.v7.widget.CardView>
